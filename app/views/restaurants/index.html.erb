<div class="container">
  <h1>Restaurants</h1>
  <hr>
  </br>
    <div class="row">
      <div class="card-group d-flex justify-content-between">
        <% @restaurants.each do |restaurant|%>
          <div class="card ml-3" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title"><%= restaurant.name %></h5>
              <div class="">
                <%= link_to 'See More', restaurant_path(restaurant.id), :class => "btn btn-primary" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <%= link_to "Create a new restaurant", new_restaurant_path, class: 'btn btn-primary' %>
</div>
